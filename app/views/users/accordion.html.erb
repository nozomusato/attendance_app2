<section>
 <button type="button" class="btn btn-primary btn-sm" data-toggle="collapse" data-target="#<%=@user.id%>">編集</button>
 <div id="<%=@user.id%>" class="collapse">
   <div class="panel">
     <div class="panel-body">
       
       <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @user, local: true) do |f| %>

         <%= f.label :名前 %>
         <%= f.text_field :name %>

         <%= f.label :メールアドレス %>
         <%= f.email_field :email %>

         <%= f.label :所属 %>
         <%= f.text_field :department %>

         <%= f.label :社員番号 %>
         <%= f.number_field :employeenumber %>

         <%= f.label :カード番号 %>
         <%= f.number_field :card_id %>

         <%= f.label :パスワード %>
         <%= f.password_field :password %>
         
         <%= f.label :基本勤務時間 %>
         <%= f.time_field :basic_time %>
         
         <%= f.label :指定勤務開始時間 %>
         <%= f.time_field :work_time %>
         
         <%= f.label :指定勤務終了時間 %>
         <%= f.time_field :work_finish_time %>

         <%= f.submit "更新する", class: "btn btn-primary" %>
        <% end %>
    </div>
       
     </div>
   </div>
 </div>
</section>