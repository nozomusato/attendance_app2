<% provide(:title, '拠点追加') %>
<h1>拠点情報編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @basepoint, local: true) do |f| %>
   
    
      <%= f.label :拠点名 %>
      <%= f.text_field :name %>

      <%= f.label :番号 %>
      <%= f.number_field :number %>
      
      <%= f.label :勤怠種類 %>
      <%= f.text_field :attendtype %>

      <%= f.submit "送信", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>